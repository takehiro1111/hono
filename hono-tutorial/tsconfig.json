{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
    },   
    "outDir": "./dist",   
  },
  "include": ["src/**/*.ts","src/__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  // "ts-node": {
  //     "esm": true,
  //     "experimentalSpecifierResolution": "node"
  //   },
}
